#!/bin/bash
set -e

TAGS=( latest 1.3.0 )
OWNER=appcelerator
IMAGE="${1:-amp-bootstrap}"

# This is now built by the amp Makefile with the tag `:local`
#docker build -t ${OWNER}/${IMAGE} .

for tag in "${TAGS[@]}"
do
  docker tag ${OWNER}/${IMAGE}:local ${OWNER}/${IMAGE}:${tag}
  docker push ${OWNER}/${IMAGE}:${tag}
done

