#!/usr/bin/env bash
set -e
VERSION=3.4.0
wget -N -q "https://github.com/google/protobuf/releases/download/v$VERSION/protoc-$VERSION-linux-x86_64.zip" 2>&1
unzip -q "protoc-$VERSION-linux-x86_64.zip"
mv bin/protoc /usr/local/bin
chmod +x /usr/local/bin/protoc
mv include/google /usr/local/include/google
chmod -R 755 /usr/local/include/google